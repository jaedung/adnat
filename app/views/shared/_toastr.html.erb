<script type="text/javascript">
  <% if notice %>
  Toastify({
    text: "<%= notice %>",
    duration: 3000,
    backgroundColor: "linear-gradient(to right, #66bb6a, #388e3c)"
  }).showToast();
  <% end %>
  <% if alert %>
  Toastify({
    text: "<%= alert %>",
    duration: 3000,
    backgroundColor: "linear-gradient(to right, #ef5350, #d32f2f)"
  }).showToast();
  <% end %>
</script>